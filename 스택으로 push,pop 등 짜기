//stack으로 create,push,pop,isfull,isempty,print,exit 짜기
#include <iostream>
#include<stack>
#include <string>


int main() {


	std::stack<int> Stack;	//스택 생성

	int stacksize = 4; //스택 사이즈 설정 

	std::string input; //명령 받을 스트링 생성 

	int number; // 입력받을 숫자 생성

	while (true) {
		std::cout << "Enter command(create, push, pop, isFull, isEmpty, print, exit) : ";
		std::cin >> input;

		if (input == "push") {

			if (Stack.size() != 4) { // 스택에 4개가 아니라면
				std::cout << "number = ";
				std::cin >> number;
				Stack.push(number);
			}
			else {		//큐가 4개로 꽉 찼다면.
				printf("Stack is Full\n");
			}
		}

		else if (input == "pop") {
			if (Stack.size() != 0) {	//큐에 요소가 남아있다면.
				number = Stack.top();
				std::cout << number << " is popped\n";
				Stack.pop();
			}
			else {
				printf("Stack is Empty\n");
			}
		}

		else if (input == "isFull") {
			if (Stack.size() == stacksize) {
				printf("1\n");
			}
			else {
				printf("0\n");
			}
		}

		else if (input == "isEmpty") {
			if (Stack.size() == 0) {
				printf("1\n");
			}
			else {
				printf("0\n");
			}
		}
		else if (input == "print") {
			int size = Stack.size();
			for (int i = 0; i < size; ++i) {
				std::cout << Stack.top() << std::endl;
				Stack.pop();
			}
		}
		else if (input == "exit") {
			printf("종료\n");
			break;
		}
		else if (input == "create") {
			printf("create!\n");
		}
		else {
			printf("Bad Command\n");
		}
	}

}
